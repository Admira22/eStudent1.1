<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel='stylesheet' href='/stylesheets/student.css' />
</head>

<body>
<div class="container">
    <%- include('navigation.ejs') %>

    <!-- ========================= Main ==================== -->
    <div class="main">
        <div class="topbar">
            <div class="toggle">
                <ion-icon name="menu-outline"></ion-icon>
            </div>
        </div>
        <div class="details">
            <div class="recentOrders">
                <div class="cardHeader">
                    <h2>Sve objave</h2>
                    <a href="/admin/home/:id" class="btn">Prikaži najnovije</a>
                </div>

                <table>
                    <thead>
                    <tr>
                        <td>Predmet</td>
                        <td>Tema</td>
                        <td>Opširnije</td>
                    </tr>
                    </thead>
                    <tbody>
                    <%for (let i = 0; i < questions.length; i++){%>
                        <tr>
                            <td><%= questions[i].subject%></td>
                            <td><%= questions[i].question%></td>
                            <td><a href="/admin/more/<%= questions[i].id%>" class="status pending">Vidi više</a></td>
                        </tr>
                    </tbody>
                    <%}%>
                </table>
            </div>

            <!-- ================= New Customers ================ -->
            <div class="recentCustomers">
                <div class="cardHeader">
                    <h2>Obavjesti</h2>
                </div>
                <table>
                    <%for (let i = 0; i < news.length; i++){%>
                        <tr>
                            <td>
                                <h4><%= news[i].title%><br> <span><%= news[i].subtitle%></span></h4>
                                <a href="/student/news-more/<%= news[i].id%>" class="status pending">Pročitaj više</a>

                            </td>
                        </tr>
                    <%}%>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- =========== Scripts =========  -->
<script src="assets/js/main.js"></script>

<!-- ====== ionicons ======= -->
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
<script src="skripta.js"></script>
</body>

</html>